class Solution {
public:
    string reverseWords(string s) {
        reverse(s.begin(),s.end());
        string world,result;
       for(int i=0;i<s.size();i++){
        if(s[i]!=' '){
            world+=s[i];
        }
        else if(!world.empty()){
            reverse(world.begin(),world.end());
            if(!result.empty())
               result+=" ";
            result+=world;
            world.clear();
        }
       }
       if(!world.empty()){
            reverse(world.begin(),world.end());
            if(!result.empty())
               result+=" ";
            result+=world;
            world.clear();
        }
        

       return result;
    }
};
