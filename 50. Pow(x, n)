class Solution {
public:
    double myPow(double x, int n) {
        long binform = n;
        if(n < 0){
            x = 1/x;
            binform = -binform;
        }
        double result = 1.0;
        while(binform > 0){
            if(binform % 2 == 1){
                result = result * x;
            }
            x = x*x;
            binform /= 2;
            
        }
        return result;
    }
};
