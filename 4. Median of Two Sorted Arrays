class Solution {
public:
    double findMedianSortedArrays(vector<int>& nums1, vector<int>& nums2) {
        vector<int> x;
        int i=0,j=0;
        while(i<nums1.size() && j<nums2.size()){
            if(nums1[i]>nums2[j]){
                x.push_back(nums2[j]);
                j++;
            }
            else{
                x.push_back(nums1[i]);
                i++;
            }
        }
        while(i<nums1.size()){
            x.push_back(nums1[i]);
            i++;
        }
        while(j<nums2.size()){
            x.push_back(nums2[j]);
            j++;
        }
        int size=x.size();
        if(size%2!=0){
            return x[size/2];
        }
        else{
            return(double)(x[size/2]+x[size/2-1])/2;

        }
    }
};
