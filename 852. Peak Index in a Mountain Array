class Solution {
public:
    int peakIndexInMountainArray(vector<int>& arr) {
       int left=0,right=arr.size()-1;
       int max=0;
       while(left<=right){
        int mid=(left+right)/2;
        if(arr[mid]>max)
          max=mid;
        if(arr[mid-1]>arr[mid]){
            right=mid;

        }
        if(arr[mid+1]>arr[mid]){
            left=mid+1;

        }
        if(arr[mid]>arr[mid-1] && arr[mid]>arr[mid+1])
           return max;
       }
       return max;
    }
};
